<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#0088cf" >

        <ImageView
            android:id="@+id/purse_result_ok_back"
            style="@style/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/resultTitle"
            android:src="@drawable/button_details_gohome" />

        <TextView
            android:id="@+id/textview_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/resultTitle"
            android:textColor="#ffffffff"
            android:textSize="20sp" />
    </FrameLayout>

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->

    <RelativeLayout
        android:id="@+id/purse_result_pos_div"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <!-- 收款人 -->

        <TextView
            android:id="@+id/purse_result_pos_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:textSize="20sp" />

        <!-- 分割线 -->

        <TextView
            android:layout_width="314dp"
            android:layout_height="1.0px"
            android:layout_below="@id/purse_result_pos_user_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#b9b9b9" />

        <!-- 收款金额 -->

        <TextView
            android:id="@+id/purse_result_ok_amout_txt"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="124dp"
            android:gravity="center"
            android:textSize="20sp" />

        <!-- 分割线 -->

        <TextView
            android:layout_width="314dp"
            android:layout_height="1.0px"
            android:layout_below="@id/purse_result_ok_amout_txt"
            android:layout_centerHorizontal="true"
            android:background="#b9b9b9" />

        <!-- 余额 -->

        <TextView
            android:id="@+id/purse_result_ok_balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_below="@id/purse_result_ok_amout_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>