<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/day_top_line"
        android:layout_width="2dp"
        android:layout_height="25dp"
        android:layout_marginLeft="80dp"
        android:background="@color/gray" />

    <ImageView
        android:id="@+id/img_day_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/day_top_line"
        android:layout_marginLeft="70dp"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/day_bottom_line"
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@id/day_top_line"
        android:layout_below="@id/img_day_icon"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_day_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_day_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_day_icon"
        android:layout_toRightOf="@id/tv_counter"
        android:text="ç¬”" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/day_bottom_line" />

</RelativeLayout>