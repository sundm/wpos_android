<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical" >

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->

    <RelativeLayout
        android:id="@+id/activePOS_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/background_login_div"
        android:padding="15dip" >

        <!-- 商户号 -->

        <TextView
            android:id="@+id/activePOS_StoreNumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/activePOS_StoreNumber_txt"
            android:textSize="20sp" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/activePOS_StoreNumber_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/activePOS_StoreNumber_txt"
            android:layout_toRightOf="@id/activePOS_StoreNumber_txt"
            android:hint="@string/activePOS_StoreNumber_hint"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <!-- 终端号 -->

        <TextView
            android:id="@+id/activePOS_POSNumber_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/activePOS_StoreNumber_txt"
            android:layout_below="@id/activePOS_StoreNumber_txt"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/activePOS_POSNumber_txt"
            android:textSize="20sp" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/activePOS_POSNumber_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activePOS_StoreNumber_edit"
            android:layout_alignTop="@id/activePOS_POSNumber_txt"
            android:layout_below="@id/activePOS_StoreNumber_edit"
            android:hint="@string/activePOS_POSNumber_hint"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activePOS_POSNumber_txt"
            android:layout_alignRight="@id/activePOS_POSNumber_edit"
            android:layout_below="@id/activePOS_POSNumber_edit"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/activePOS_hint_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:text="@string/activePOS_hint_txt"
                android:textColor="#888"
                android:textSize="12sp" />

            <!-- 开通终端 -->

            <com.zc.app.bootstrap.BootstrapButton
                android:id="@+id/activePOS_active_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/activePOS_hint_txt"
                android:layout_marginTop="15dp"
                android:text="@string/activePOS_active_txt"
                android:textSize="20sp"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="success" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>