<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical" >

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->

    <RelativeLayout
        android:id="@+id/regsiter_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/background_login_div"
        android:padding="15dip" >

        <!-- 账号 -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/regsiter_username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_user_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/regsiter_username_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/regsiter_username_txt"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/regsiter_username_txt"
            android:hint="@string/regsiter_username_hint"
            android:inputType="text"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <!-- 密码 text -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/regsiter_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/regsiter_username_txt"
            android:layout_below="@id/regsiter_username_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/regsiter_password_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regsiter_username_edit"
            android:layout_below="@+id/regsiter_username_txt"
            android:layout_marginBottom="10dp"
            android:hint="@string/regsiter_password_hint"
            android:inputType="textPassword"
            fontawesometext:be_roundedCorners="true"
            fontawesometext:be_state="success" >
        </com.zc.app.bootstrap.BootstrapEditText>

        <!-- 密码 agine text -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/regsiter_password_agine_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/regsiter_username_txt"
            android:layout_below="@id/regsiter_password_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/regsiter_password_agine_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regsiter_username_edit"
            android:layout_alignTop="@id/regsiter_password_agine_txt"
            android:layout_below="@id/regsiter_password_edit"
            android:hint="@string/regsiter_password_agine_hint"
            android:inputType="textPassword"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />
        
        <!-- nick name text -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/regsiter_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/regsiter_username_txt"
            android:layout_below="@id/regsiter_password_agine_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/regsiter_nickname_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regsiter_username_edit"
            android:layout_alignTop="@id/regsiter_nickname_txt"
            android:layout_below="@id/regsiter_password_agine_edit"
            android:hint="@string/regsiter_nickname_hint"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />
        
        <!-- phone number text -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/regsiter_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/regsiter_username_txt"
            android:layout_below="@id/regsiter_nickname_txt"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/regsiter_phone_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regsiter_username_edit"
            android:layout_alignTop="@id/regsiter_phone_txt"
            android:layout_below="@id/regsiter_nickname_edit"
            android:hint="@string/regsiter_phone_hint"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <!-- 注册button -->

        <com.zc.app.bootstrap.BootstrapButton
            android:id="@+id/regsiter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regsiter_password_agine_txt"
            android:layout_alignRight="@+id/regsiter_password_agine_edit"
            android:layout_below="@+id/regsiter_phone_txt"
            android:layout_marginTop="20dp"
            android:text="@string/regsiter"
            android:textSize="20sp"
            fontawesometext:bb_roundedCorners="true"
            fontawesometext:bb_type="success" >
        </com.zc.app.bootstrap.BootstrapButton>
    </RelativeLayout>

</LinearLayout>