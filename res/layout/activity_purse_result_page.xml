<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical" >

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->

    <RelativeLayout
        android:id="@+id/purse_result_pos_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/background_login_div"
        android:padding="15dip" >

        <!-- 交易金额 -->

        <TextView
            android:id="@+id/purse_result_pos_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/purse_result_pos_amount_txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/purse_result_pos_amount_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/purse_result_pos_amount_txt"
            android:layout_alignTop="@id/purse_result_pos_amount_txt"
            android:layout_toRightOf="@id/purse_result_pos_amount_txt"
            android:gravity="center"
            android:text="@string/purse_result_pos_hint_txt"
            android:textSize="30sp" />

        <!-- 钱包余额 -->

        <TextView
            android:id="@+id/purse_result_pos_balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@id/purse_result_pos_amount_txt"
            android:layout_below="@id/purse_result_pos_amount_txt"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/purse_result_pos_balance_txt"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/purse_result_pos_balance_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/purse_result_pos_balance_txt"
            android:layout_alignLeft="@+id/purse_result_pos_amount_edit"
            android:layout_alignTop="@id/purse_result_pos_balance_txt"
            android:layout_below="@id/purse_result_pos_amount_edit"
            android:gravity="center"
            android:text="@string/purse_result_pos_hint_txt"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/purse_result_pos_balance_txt"
            android:layout_alignRight="@id/purse_result_pos_balance_edit"
            android:layout_below="@id/purse_result_pos_balance_edit"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/purse_result_pos_hint_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:text="@string/purse_result_pos_hint_txt"
                android:textColor="#888"
                android:textSize="12sp" />

            <!-- 消费结果 -->

            <com.zc.app.bootstrap.BootstrapButton
                android:id="@+id/purse_result_pos_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="@string/purse_result_pos_button_text"
                android:textSize="20sp"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="success" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>