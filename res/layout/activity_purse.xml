<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->


    <!-- 收款 -->

    <LinearLayout
        android:id="@+id/purse_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/purse_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="42dp"
            android:text="@string/purse_pos_text"
            android:textColor="@color/textColor"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/purse_amount_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="0.00"
            android:textColor="@color/amountColor" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/padding"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </RelativeLayout>

    <TableLayout
        android:id="@+id/pad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#b9b9b9"
        android:orientation="vertical" >

        <TableRow>

            <RelativeLayout
                android:id="@+id/purse_pad_1_layout"
                android:layout_width="106dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_2_layout"
                android:layout_width="106dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_3_layout"
                android:layout_width="106dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <RelativeLayout
                android:id="@+id/purse_pad_4_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_5_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_6_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <RelativeLayout
                android:id="@+id/purse_pad_7_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_8_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_9_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingBottom="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_9"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <RelativeLayout
                android:id="@+id/purse_pad_c_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_c"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_0_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:paddingRight="0.5dp"
                android:paddingTop="0.5dp" >

                <TextView
                    android:id="@+id/pad_0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/textview_style"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/textview_text_style"
                    android:textSize="28sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/purse_pad_del_layout"
                android:layout_width="fill_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/textview_style"
                android:clickable="true"
                android:paddingTop="0.5dp" >

                <ImageView
                    android:id="@+id/pad_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/del" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:gravity="bottom"
        android:orientation="vertical" >

        <!-- 开通终端button -->

        <Button
            android:id="@+id/purse_active_button"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:background="@drawable/bbuton_success"
            android:text="@string/purse_pos_button_text"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </Button>
    </LinearLayout>

</LinearLayout>