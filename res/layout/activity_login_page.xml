<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical" >

    <!--
         padding 内边距   layout_margin 外边距  
        android:layout_alignParentTop 布局的位置是否处于顶部
    -->

    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="@drawable/background_login_div"
        android:padding="15dip" >

        <!-- 头像 -->

        <com.zc.app.bootstrap.BootstrapCircleThumbnail
            android:id="@+id/login_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            fontawesometext:bct_image="@drawable/pos"
            fontawesometext:bct_size="medium" >
        </com.zc.app.bootstrap.BootstrapCircleThumbnail>

        <!-- 账号 -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/login_username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_user_icon"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-user" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/login_username_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/login_username_txt"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/login_username_txt"
            android:hint="@string/login_username_hint"
            android:inputType="text"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <!-- 密码 text -->

        <com.zc.app.bootstrap.FontAwesomeText
            android:id="@+id/login_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/login_username_txt"
            android:layout_below="@id/login_username_txt"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/bbutton_warning"
            android:textSize="30sp"
            fontawesometext:fa_icon="fa-key" />

        <com.zc.app.bootstrap.BootstrapEditText
            android:id="@+id/login_password_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_username_edit"
            android:layout_alignTop="@id/login_password_txt"
            android:layout_below="@id/login_username_edit"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            bootstrapbutton:be_roundedCorners="true"
            bootstrapbutton:be_state="success" />

        <!-- 登录button -->

        <com.zc.app.bootstrap.BootstrapButton
            android:id="@+id/signin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_password_txt"
            android:layout_alignRight="@id/login_password_edit"
            android:layout_below="@id/login_password_edit"
            android:layout_marginTop="15dp"
            android:text="@string/signin"
            android:textSize="20sp"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="success" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:linksClickable="true"
            android:text="@string/login_register_link"
            android:textColor="#888"
            android:textColorLink="#FF0066CC" />
    </RelativeLayout>

</LinearLayout>